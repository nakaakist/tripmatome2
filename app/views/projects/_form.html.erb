<%= form_for @article, :url => {:action => :index} do |f|  %>
 <% if @article.errors.any?  %>
   <div id="error_explanation">
     <h2><%= pluralize(@article.error.count, "error")  %>prohibited this article from being saved</h2>

     <ul>
       <% @article.error.full_messages.each do |msg|  %>
         <li><%= msg  %></li>  
       <% end  %>
     </ul>
   </div>
 <% end  %>


 <div class="field">
   <%= f.label:text  %><br>
   <%= f.text_field:article_text  %>
 </div>

 <div class="action">
   <%= f.submit  %>
 </div>

<% end  %>
